<Window x:Class="KioskControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="KioskControl" Height="216" Width="698" Loaded="Window_Loaded" Topmost="True">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="The Photo Shop Metro Kiosk (WPF Enabled)" VerticalAlignment="Top"/>
        <Button Content="Quit Kiosk Application" HorizontalAlignment="Left" Margin="10,31,0,0" VerticalAlignment="Top" Width="149" Height="45" Click="Button_Click"/>
        <Button Content="Shut Down Kiosk" HorizontalAlignment="Left" Margin="10,81,0,0" VerticalAlignment="Top" Width="149" Height="45" Click="Button_Click_1"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="10,131,0,0" VerticalAlignment="Top" Width="149" Height="45" Click="Button_Click_2"/>
        <ListBox x:Name="Assemblybox" Margin="164,57,10,10"/>
        <Label Content="Loaded Assemblies:" HorizontalAlignment="Left" Margin="164,31,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
