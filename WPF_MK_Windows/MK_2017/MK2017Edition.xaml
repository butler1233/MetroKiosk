    <Grid>
        <Grid.Background>
            <RadialGradientBrush>
                <RadialGradientBrush.RelativeTransform>
                    <TransformGroup>
                        <ScaleTransform CenterY="1" CenterX="1" ScaleX="2" ScaleY="2"/>
