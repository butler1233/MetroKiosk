                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="_10x12Button">
                <EasingDoubleKeyFrame KeyTime="0:0:0.24" Value="80"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.54" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="_10x12Button">
                <EasingDoubleKeyFrame KeyTime="0:0:0.24" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.54" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="AniamteOut">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="wrapPanel">
                <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CircleEase EasingMode="EaseIn"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="wrapPanel">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="-100">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CircleEase EasingMode="EaseIn"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Page.Resources>
    <Page.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <BeginStoryboard Storyboard="{StaticResource Entry}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="_6x4Button">
            <BeginStoryboard x:Name="AniamteOut_BeginStoryboard1" Storyboard="{StaticResource AniamteOut}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="_7x5Button">
            <BeginStoryboard x:Name="AniamteOut_BeginStoryboard2" Storyboard="{StaticResource AniamteOut}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="_8x6Button">
            <BeginStoryboard x:Name="AniamteOut_BeginStoryboard3" Storyboard="{StaticResource AniamteOut}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="_10x8Button">
            <BeginStoryboard x:Name="AniamteOut_BeginStoryboard4" Storyboard="{StaticResource AniamteOut}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="_10x12Button">
            <BeginStoryboard x:Name="AniamteOut_BeginStoryboard5" Storyboard="{StaticResource AniamteOut}"/>
        </EventTrigger>
    </Page.Triggers>
    <Page.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFB0DFFF" Offset="0"/>
            <GradientStop Color="#FFB5C0FF" Offset="1"/>
        </LinearGradientBrush>
    </Page.Background>
    <Grid>
        <WrapPanel x:Name="wrapPanel" Margin="30,0" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
            <WrapPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </WrapPanel.RenderTransform>

            <Button x:Name="_6x4Button" HorizontalAlignment="Left" Height="377" Margin="15" VerticalAlignment="Top" Width="302" BorderBrush="#FF006DC7" Background="#FF006DC7" RenderTransformOrigin="0.5,0.5" Opacity="0">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="80"/>
                    </TransformGroup>
                </Button.RenderTransform>
                <Image Height="375" Width="300" Source="/ThePSKiosk;component/Resources/Service_6_4.png"/>
            </Button>
            <Button x:Name="_7x5Button" HorizontalAlignment="Left" Height="377" Margin="15" VerticalAlignment="Top" Width="302" BorderBrush="#FF006DC7" Background="#FF006DC7" RenderTransformOrigin="0.5,0.5" Opacity="0">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="80"/>
                    </TransformGroup>
                </Button.RenderTransform>
                <Image Height="375" Width="300" Source="/ThePSKiosk;component/Resources/Service_7_5.png"/>
            </Button>
            <Button x:Name="_8x6Button" HorizontalAlignment="Left" Height="377" Margin="15" VerticalAlignment="Top" Width="302" BorderBrush="#FF006DC7" Background="#FF006DC7" RenderTransformOrigin="0.5,0.5" Opacity="0">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="80"/>
                    </TransformGroup>
                </Button.RenderTransform>
                <Image Height="375" Width="300" Source="/ThePSKiosk;component/Resources/Service_8_6.png"/>
            </Button>
            <Button x:Name="_10x8Button" HorizontalAlignment="Left" Height="377" Margin="15" VerticalAlignment="Top" Width="302" BorderBrush="#FF006DC7" Background="#FF006DC7" RenderTransformOrigin="0.5,0.5" Opacity="0">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="80"/>
                    </TransformGroup>
                </Button.RenderTransform>
                <Image Height="375" Width="300" Source="/ThePSKiosk;component/Resources/Service_8_10.png"/>
            </Button>
            <Button x:Name="_10x12Button" HorizontalAlignment="Left" Height="377" Margin="15" VerticalAlignment="Top" Width="302" BorderBrush="#FF006DC7" Background="#FF006DC7" RenderTransformOrigin="0.5,0.5" Opacity="0">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="80"/>
                    </TransformGroup>
                </Button.RenderTransform>
                <Image Height="375" Width="300" Source="/ThePSKiosk;component/Resources/Service_10_12.png"/>
            </Button>
        </WrapPanel>

    </Grid>
</Page>
