            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="_8x6Button">
                <EasingDoubleKeyFrame KeyTime="0:0:0.12" Value="0"/>
